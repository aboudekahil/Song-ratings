<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="./icons/favicon.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />
    <title>Results for <%= query %></title>
  </head>
  <body>
    <div>
      <form
        class="col-12 align-self-center w-50 col-lg-auto mb-3 mb-lg-0 me-lg-3"
        method="get"
        action="/query"
      >
        <div class="input-group mb-3">
          <span class="input-group-text" id="basic-addon1"
            ><img src="./icons/searchIcon.svg"</span
          >
          <input
            type="search"
            class="form-control form-control-dark"
            placeholder="Search..."
            aria-label="Search"
            name="query"
            value="<%=query%>"
          />
        </div>
      </form>
      <div>
        <h1>Songs</h1>
        <% for(let song of results.songs) { %>
        <div>
          <a href="/song?id=<%=song.song_id%>">
            <h1><%=song.song_name%></h1>
          </a>
        </div>
        <%}%>
      </div>
      <div>
        <h1>Albums</h1>
        <% for(let album of results.albums) { %>
        <div>
          <a href="/album?id=<%=album.album_id%>">
            <h1><%=album.album_name%></h1>
          </a>
        </div>
        <%}%>
      </div>
      <div>
        <h1>Artists</h1>
        <% for(let artist of results.artists) { %>
        <div>
          <h1><%=artist.artist_stagename%></h1>
          <h2><%=artist.user_name%></h2>
        </div>
        <%}%>
      </div>
    </div>
  </body>
</html>
