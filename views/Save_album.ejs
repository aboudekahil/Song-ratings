<%- include('start'); %>

<form action="/api/saveAlbum" method="post">
  <div class="form-group">
    <label for="albumId">Album ID:</label>
    <input
      class="form-control-plaintext"
      id="albumId"
      value="1"
      name="id"
      type="number"
      readonly
    />
  </div>
  <div class="form-group">
    <label for="albumName">Album Name:</label>
    <input class="form-control" id="albumName" name="name" type="text" />
  </div>
  <div class="form-group">
    <label for="albumDate">Album Date:</label>
    <input class="form-control" id="albumDate" name="releaseDate" type="date" />
  </div>
  <input type="submit" />
</form>

<%- include('end'); %>
